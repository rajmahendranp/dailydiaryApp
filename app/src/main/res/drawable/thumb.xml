<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:right="4dp" android:left="1dp">
                <shape android:tint="?attr/colorPrimary"
                    android:shape="rectangle">
                    <solid android:color="?attr/colorPrimary" />
                    <size android:width="16dp" android:height="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
               android:right="4dp" android:left="1dp">
                <shape android:tint="?attr/colorPrimary"
                    android:shape="rectangle">
                    <solid android:color="?attr/colorPrimary"
                        />
                    <size android:width="16dp" android:height="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>