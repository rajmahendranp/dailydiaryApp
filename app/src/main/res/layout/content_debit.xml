                android:weightSum="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/from_date"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/fromdate"
                    android:textSize="13dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:clickable="true"
                    android:focusable="false"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="?attr/textcolor1"
                    android:background="@drawable/edittext_tint"/>
                <EditText
                    android:id="@+id/to_date"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/todate"
                    android:textSize="13dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:clickable="true"
                    android:focusable="false"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="?attr/textcolor1"
                    android:background="@drawable/edittext_tint"/>



                <Button
                    android:id="@+id/search3"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/login_selector"
                    android:text="@string/search"
                    android:textColor="@color/White"
                    android:textSize="15dp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/search"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/search_widget1"

                    android:focusable="false"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/open_regular"
                    android:hint="@string/name_search"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="text"
                    android:textColor="?attr/textcolor"
                    android:textSize="15dp" />
                <!--    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"-->
                <EditText
