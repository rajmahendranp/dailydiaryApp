<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/black"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/final_drawww"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/searchid"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.2"
                    android:clickable="true"
                    android:hint="ID"
                    android:visibility="invisible"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/open_regular"
                    android:background="@drawable/search_widget"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:textColor="@color/spin3"
                    android:textColorHint="@color/spin3" />
                <EditText
                    android:id="@+id/search"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.2"
                    android:clickable="true"
                    android:hint="Name"
                    android:visibility="invisible"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/open_regular"
                    android:background="@drawable/search_widget"
                    android:textSize="15dp"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                    android:inputType="textFilter"
                    android:textColor="@color/spin3"
                    android:textColorHint="@color/spin3" />

                <Button
                    android:id="@+id/close"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/close" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:editable="false"
                        android:text="@string/name"
                        android:textColor="@color/spin3"
                        android:textColorHint="@color/gray"
                        android:textSize="15dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/spin2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:editable="false"
                        android:text="@string/debit_amount"
                        android:textColor="@color/spin3"
                        android:textColorHint="@color/gray"
                        android:textSize="15dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/spin2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:editable="false"
                        android:text="@string/paid_amount"
                        android:textColor="@color/spin3"
                        android:textColorHint="@color/gray"
                        android:textSize="15dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/spin2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:editable="false"
                        android:text="@string/balance_amount"
                        android:textColor="@color/spin3"
                        android:textColorHint="@color/gray"
                        android:textSize="15dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/spin2"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/spin2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:inputType="number"
                        android:text="@string/current_collection_amount"
                        android:textColor="@color/spin3"
                        android:textColorHint="@color/gray"
                        android:textSize="15dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name :"
                        android:textSize="15dp"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end|center_vertical"
                        android:textColor="@color/spin3"
                        android:editable="false"
                        android:layout_marginTop="5dp"
                        android:textColorHint="@color/gray"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/spin2"/>
                    <TextView
                        android:id="@+id/debitamount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Debit amount :"
                        android:textSize="15dp"
                        android:textColor="@color/spin3"
                        android:editable="false"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginTop="5dp"
                        android:textColorHint="@color/gray"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/spin2"/>

                    <TextView
                        android:id="@+id/paidamount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:text="Paid amount :"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end|center_vertical"
                        android:editable="false"
                        android:textColor="@color/spin3"
                        android:textColorHint="@color/gray"
                        android:textSize="15dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/spin2"/>
                    <TextView
                        android:id="@+id/balanceamount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginRight="10dp"
                        android:editable="false"
                        android:text="Balance amount :"
                        android:textColor="@color/spin3"
                        android:textColorHint="@color/gray"
                        android:textSize="15dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/spin2"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/spin2"/>
                    <EditText
                        android:id="@+id/collection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:inputType="number"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end|center_vertical"
                        android:text="Enter Collection amount"
                        android:textColor="@color/spin3"
                        android:textColorHint="@color/gray"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/save"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:background="@drawable/login_selector"
                android:text="@string/save"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>