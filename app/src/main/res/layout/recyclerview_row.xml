<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/line"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <!--<TextView-->
    <!--android:id="@+id/slno"-->
    <!--android:layout_weight="0"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="1"-->
    <!--android:layout_marginLeft="50dp"-->
    <!--android:textSize="20sp"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/id"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.7"
            android:gravity="start|center_vertical"
            android:text="abi"
            android:textAlignment="textStart"
            android:textColor="@color/White"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:gravity="start|center_vertical"
            android:text="abi"
            android:textAlignment="textStart"
            android:textColor="@color/Black"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3">

            <Button
                android:id="@+id/edit"
                android:layout_width="24dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/edit"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/nip"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bordered_button"
                android:text="@string/NIPNIP"
                android:textColor="@color/White"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/current"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bordered_button_black"
                android:text="@string/current1"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="12dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/closed"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bordered_button_black"
                android:text="@string/closed_account1"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="12dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/currr"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bordered_button"
                android:text="@string/NIP"
                android:textColor="@color/White"
                android:textSize="12dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/morn"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bordered_button"
                android:text="@string/Mor"
                android:textColor="@color/White"
                android:textSize="12dp" />

            <Button
                android:id="@+id/even"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bordered_button"
                android:text="@string/Eve"
                android:textColor="@color/White"
                android:textSize="12dp"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:visibility="gone"
            android:id="@+id/delete"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="-1dp"
            android:layout_marginRight="4dp"
            android:layout_weight="0.1"
            android:background="@drawable/delete"
            android:textColor="@color/White"
            android:textSize="12dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayed"/>
    </LinearLayout>
</LinearLayout>