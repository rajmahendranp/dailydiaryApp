                android:textColor="@color/spin3"
                android:textSize="16sp"
                android:gravity="start" />

            <LinearLayout
                android:orientation="horizontal" android:layout_height="30dp"
                android:layout_width="130dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:visibility="gone"
                    android:id="@+id/closedd"
                    android:layout_height="wrap_content"
                    android:layout_width="20dp"
                    android:layout_weight="0.2"
                    android:text="@string/delete_png"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorPrimary" />

                <EditText
                    android:id="@+id/amount"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.7"
                    android:background="@drawable/edittext_tint"
                    android:inputType="number"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/spin3"
                    android:textSize="18sp"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/save"
                    android:layout_height="wrap_content"
                    android:layout_width="50dp"
                    android:layout_weight="0.1"
                    android:text="@string/save_icon"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorPrimary" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/save11"
                    android:layout_height="wrap_content"
                    android:layout_width="50dp"
                    android:layout_weight="0.1"
                    android:text="@string/save_icon"
