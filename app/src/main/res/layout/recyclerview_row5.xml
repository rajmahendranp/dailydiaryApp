<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/vvv1"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:gravity="center"
        android:layout_marginTop="5dp"
        android:weightSum="4">


        <TextView
            android:id="@+id/slno"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:fontFamily="@font/open_regular"
            android:text="Sl"
            android:textAlignment="center"
            android:textColor="@color/spin3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dateac"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.9"
            android:fontFamily="@font/open_regular"
            android:text="Date"
            android:textAlignment="center"
            android:textColor="@color/spin3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/actype"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Account Type"
            android:textAlignment="center"
            android:textColor="@color/spin3"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="22dp"
            android:layout_weight="0.2"
            android:weightSum="2">
            <Button
                android:id="@+id/edit"
                android:layout_marginLeft="5dp"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/edit" />
            <Button
                android:id="@+id/more"
                android:layout_marginLeft="5dp"
                android:layout_width="22dp"
                android:visibility="gone"
                android:layout_height="22dp"
                android:background="@drawable/view_more" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="42dp"
            android:layout_height="22dp"
            android:layout_weight="0.2"
            android:weightSum="2">
            <Button
                android:layout_weight="1"
                android:id="@+id/delete"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/delete" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vvv2"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="0.5"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_gravity="start|center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="textStart"
            android:text="@string/account_type1"
            android:textColor="@color/White"
            android:textSize="15dp" />

        <TextView
            android:layout_weight="1.5"
            android:id="@+id/acname"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:layout_gravity="start|center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="textStart"
            android:textColor="?attr/textcolor1"
            android:textSize="15dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="0.5"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_gravity="start|center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="textStart"
            android:text="@string/note1"
            android:textColor="@color/White"
            android:textSize="15dp" />

        <TextView
            android:layout_weight="1.5"
            android:id="@+id/acnote"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:layout_gravity="start|center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="textStart"
            android:textColor="?attr/textcolor1"
            android:textSize="15dp" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:id="@+id/vi"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayed"/>
        <View
            android:id="@+id/vi1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="gone"
            android:background="@color/gray"/>
    </LinearLayout>
</LinearLayout>